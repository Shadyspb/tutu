<%= form_with(model: @ticket, local: true) do |form| %>
  <%= render 'common/errors', resource: @ticket %>

  <div class="field">
    <%= form.label :number %>
    <%= form.text_field :number, id: :ticket_number %>
  </div>

  <div class="actions">
    <%= form.submit "#{ @ticket.new_record? ? 'Создать' : 'Изменить'}" %>
  </div>
<% end %>
