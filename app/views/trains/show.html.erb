<p id="notice"><%= notice %></p>

<p>
  <strong>Number:</strong>
  <%= @train.number %>
</p>

<p>
  <strong>На станции:</strong>
  <% if @train.current_station.present? %>
  <%= @train.current_station&.title || 'Нет Станции' %>
  <% end %>
</p>

<p>
  <strong>Маршрут:</strong>
  <% if @train.route.present? %>
  <%= @train.route.name || 'Нет Маршрута' %>
  <% end %>
</p>

<p>
  <strong>Вагоны:</strong>
  <p>
  <% if @train.cars.present? %>
    <%  @train.sorted_cars.each do |car| %>
      <%= link_to car.number, car_path(car) %><br>
    <% end %>
  </p>
  <% else %>
      Нет вагонов
  <% end %>
</p>

<p>
  <strong>Места:</strong><br>
  <% if @train.cars.present? %>
    <% @train.places_count.each do |place, quantity| %>
      <%= "#{place}: #{quantity}" %>
    <% end %>
  <% else %>
    Нет вагонов
  <% end %>
</p>

<p>
<%= link_to "Добавить вагон", new_train_car_path(@train) %>
</p>

<%= link_to 'Изменить', edit_train_path(@train) %> |
<%= link_to 'Назад', trains_path %>
