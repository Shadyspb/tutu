<%= form_for([:admin, @train, @car.becomes(Car)]) do |form| %>
  <%= render 'common/errors', resource: @car %>

  <div class="field">
    <%= form.label 'Поезд' %>
    <%= form.collection_select :train_id, Train.all, :id, :number %>
  </div>

  <div class="field">
    <%= form.label 'Тип вагона' %>
    <%= form.select :type, Car::TYPES %>
  </div>

  <div class="field">
    <%= form.label 'Верхних мест' %>
    <%= form.number_field :up_places, id: :car_up_places %>
  </div>

  <div class="field">
    <%= form.label 'Нижних мест' %>
    <%= form.number_field :down_places, id: :car_down_places %>
  </div>

  <div class="field">
    <%= form.label 'Верхних боковых мест' %>
    <%= form.number_field :side_up_places %>
  </div>

  <div class="field">
    <%= form.label 'Нижних боковых мест' %>
    <%= form.number_field :side_down_places %>
  </div>

  <div class="field">
    <%= form.label 'Сидячих мест' %>
    <%= form.number_field :seat_places %>
  </div>


  <div class="actions">
    <%= form.submit "#{@car.new_record? ? 'Создать' : 'Изменить'}"%>
  </div>
<% end %>
